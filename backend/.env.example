# Flask Configuration
SECRET_KEY=change-this-in-production
DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database (adjust for your MySQL container)
DATABASE_URL=mysql+pymysql://mqc_user:mqc_password@localhost:3306/mqc_db

# CORS (allow all for development, restrict in production)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# YOLO Configuration
YOLO_MODEL=yolo11n.pt
YOLO_DEVICE=cuda
YOLO_CONFIDENCE=0.5
YOLO_IOU=0.45

# Frame Processing
FRAME_SKIP=3
FRAME_WIDTH=640
FRAME_HEIGHT=640

# Streaming
MJPEG_FPS=30
MJPEG_QUALITY=85

# Occupancy Thresholds
WARNING_THRESHOLD=80
VIOLATION_THRESHOLD=100

# Camera Connection
RTSP_TIMEOUT=10
RTSP_RETRY=5

# WebSocket
STATS_INTERVAL=2

# Database Logging (future enhancement)
DB_LOG_INTERVAL=60
SNAPSHOT_VIOLATION=True
